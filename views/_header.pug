header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el(href='#') Log out
      a.nav__el(href='#')
      img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
      span.user-name= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/sigup') Sign up